<UserControl x:Class="DatabaseController.View.LogIn.ViewLogIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseController.View.LogIn"
             xmlns:resx="clr-namespace:DatabaseController.Properties"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Background="AliceBlue"
             
             x:Name="View">
    <Grid>
        <StackPanel>
            <Label Content="{Binding Source={x:Static resx:Resources.LoginLabel}}" Margin="16,20,20,0"/>
            <TextBox Text="{Binding Login, ElementName=View}" Margin="20,0,20,0"/>

            <Label Content="{Binding Source={x:Static resx:Resources.PasswordLabel}}" Margin="16,10,20,0"/>
            <TextBox Text="{Binding Password, ElementName=View}" Margin="20,0,20,0"/>

            <Button Content="{Binding Source={x:Static resx:Resources.LoginButton}}" Command="{Binding LoginCommand, ElementName=View}" Margin="20" Height="29"/>
        </StackPanel>
    </Grid>
</UserControl>
