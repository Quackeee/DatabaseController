<UserControl x:Class="DatabaseController.CommandExecutors.View.RoastCommandExecutorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseController.CommandExecutors.View"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Które?"/>
            <TextBox Text="{Binding Which}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Ile?"/>
            <TextBox Text="{Binding HowMuch}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Metoda?"/>
            <ComboBox ItemsSource="{Binding Methods}" SelectedItem="{Binding Method}"/>
            
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Stopień?"/>
            <ComboBox ItemsSource="{Binding Levels}" SelectedItem="{Binding Level}"/>
        </StackPanel>
        <Label Content="Metoda/y?"/>
        <StackPanel Orientation="Horizontal">
            <CheckBox Content="Aeropress" IsChecked="{Binding ForAeropress}"/>
            <CheckBox Content="Drip" IsChecked="{Binding ForDrip}"/>
            <CheckBox Content="Chemex" IsChecked="{Binding ForChemex}"/>
            <CheckBox Content="Pressure Express" IsChecked="{Binding ForPressureExpress}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox Content="Drip Express" IsChecked="{Binding ForDripExpress}"/>
        </StackPanel>
        <Label Content="Speciality?"/>
        <CheckBox IsChecked="{Binding Speciality}"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Punktacja"/>
            <TextBox Width="100" Text="{Binding Points}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Wady"/>
            <TextBox Width="100" Text="{Binding Flaws}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Body"/>
            <TextBox Width="100" Text="{Binding Body}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Kwasowość"/>
            <TextBox Width="100" Text="{Binding Acidity}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Sweetness"/>
            <TextBox Width="100" Text="{Binding Sweetness}"/>
        </StackPanel>
            
    </StackPanel>
</UserControl>
